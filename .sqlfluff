[sqlfluff]
select_statement = [func_call | select_clause] W[where_clause] [order_by_clause | group_by_clause]?
update_statement = update_clause W[set_clause] W[no_where_clause]
update_clause = UPDATE
set_clause = SET name = value
name = any_identifier
value = any_value
no_where_clause = WHERE [^\S\n]